---
import Base from "~/layouts/Base.astro";
import { Search } from "~/components/Search";
import { Clipboard } from "~/components/Clipboard";
import "@fontsource/ibm-plex-mono/400.css";
import "@fontsource/ibm-plex-mono/700.css";
import "@fontsource/merriweather/700.css";
---

<Base
  title="Co-author Generator"
  description="Generate co-author messages to give credit to your contributors!"
  image="/coauthor-og.webp"
  imageAlt="A banner with the text 'Co-author Generator' and a description of the tool"
>
  <main class="flex flex-1 flex-col items-center">
    <h1
      class="text-4xl font-bold sm:text-6xl text-zinc-900 dark:text-zinc-100 w-full text-center pb-8 pt-16 sm:pb-14 sm:pt-24 font-serif"
    >
      Co-author Generator
    </h1>
    <div
      class="bg-gray-100 p-6 dark:bg-zinc-800 border-zinc-200 rounded-md border dark:border-zinc-700 w-full sm:p-8"
    >
      <Search client:load />
      <Clipboard client:idle />
    </div>
  </main>
</Base>
